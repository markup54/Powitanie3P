<Window x:Class="Powitanie3P.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Powitanie3P"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button 
            Margin="50" 
            Padding="40"
            Background="Black"
            Foreground="Bisque" Click="Button_Click"> 
            Witaj 
        </Button>
        <Button 
            Margin="50" 
            Padding="30" 
            Name="czas_button"
            MouseEnter="Button_MouseEnter" MouseLeave="czas_button_MouseLeave"> Czas </Button>
    </StackPanel>
</Window>
